DB_PGHOST=postgres
DB_PGPORT=5432

# SQL Debug (opcional)
DB_SQL_ECHO=false

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:5002

# Frontend Port (para Docker)
FRONTEND_PORT=3002
